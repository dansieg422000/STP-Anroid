<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/registerHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar" >

        <com.z.stproperty.fonts.HelveticaBold
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Sale Enquiry"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ClearBtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_bg"
            android:text="Reset"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/enquiryScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerHeader" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout android:id="@+id/EnquiryTitleLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/EuquiryTitleStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Enquiry Title"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/enquiryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/typeRightArrow"
                        android:layout_toRightOf="@+id/EuquiryTitleStr"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="Select"
                        android:textColor="@color/rgb_darkblue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/typeRightArrow"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/cellarrow" />
                </RelativeLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <RelativeLayout android:id="@+id/SalutationLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Salutation"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/Salutation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/classificationArrow"
                        android:paddingLeft="5dp"
                        android:text="Select"
                        android:textColor="@color/rgb_darkblue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/classificationArrow"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/cellarrow" />
                </RelativeLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <EditText
                    android:id="@+id/UserName"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/plain_et_border"
                    android:hint="Name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="+65"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ContactNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/plain_et_border"
                        android:hint="Contact Number"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/plain_et_border"
                    android:hint="Email"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <RelativeLayout android:id="@+id/ModeOfContactLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/ModeOfContactStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Mode of Contact"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/ModeOfContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/PriceRangeArrow"
                        android:layout_toRightOf="@+id/ModeOfContactStr"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="Select"
                        android:textColor="@color/rgb_darkblue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/PriceRangeArrow"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/cellarrow" />
                </RelativeLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <RelativeLayout android:id="@+id/timeOfContactLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/timeOfContactStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Time of Contact"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/timeOfContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/timeArrow"
                        android:layout_toRightOf="@+id/timeOfContactStr"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="Select"
                        android:textColor="@color/rgb_darkblue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/timeArrow"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/cellarrow" />
                </RelativeLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <RelativeLayout android:id="@+id/CountryLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" >

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/CountryStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Country"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <com.z.stproperty.fonts.Helvetica
                        android:id="@+id/Country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/CountryArrow"
                        android:layout_toRightOf="@+id/CountryStr"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="Select"
                        android:textColor="@color/rgb_darkblue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/CountryArrow"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/cellarrow" />
                </RelativeLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <EditText
                    android:id="@+id/AddionalQuestions"
                    android:layout_width="fill_parent"
					android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/plain_et_border"
                    android:hint="My Additional Questions"
                    android:inputType="textMultiLine"
                    android:textSize="13sp" />
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />
            </LinearLayout>

            <Button
                android:id="@+id/SendEnquireBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/green_btn"
                android:text="Enquire"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>