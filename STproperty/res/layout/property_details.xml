<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/DetailsScroll"
        style="@style/layout_vertical"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="visible" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/imageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#000"
                    android:padding="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="#FFF" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#dbdbdb"
                android:contentDescription="@null" />

            <com.z.stproperty.fonts.HelveticaBold
                android:id="@+id/propertyTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Project Title"
                android:textColor="#FFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Name"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/projectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/blueText" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classification"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/Classification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/blueText" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenure"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/Tenure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/blueText" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/PriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <com.z.stproperty.fonts.Helvetica
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="#000000" />

                        <com.z.stproperty.fonts.HelveticaBold
                            android:id="@+id/Price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/light_green" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dbdbdb"
                        android:contentDescription="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Type"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/propertyType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Floor Area"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/FloorArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/PSFDetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <com.z.stproperty.fonts.Helvetica
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PSF"
                            android:textColor="#000000" />

                        <com.z.stproperty.fonts.HelveticaBold
                            android:id="@+id/Psf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/darkBlue" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dbdbdb"
                        android:contentDescription="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postal Code"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/PostalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="District"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout android:id="@+id/BedBathLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <com.z.stproperty.fonts.Helvetica
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bedrooms"
                            android:textColor="#000000" />

                        <com.z.stproperty.fonts.HelveticaBold
                            android:id="@+id/Bedrooms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/darkBlue" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dbdbdb"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <com.z.stproperty.fonts.Helvetica
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bathrooms"
                            android:textColor="#000000" />

                        <com.z.stproperty.fonts.HelveticaBold
                            android:id="@+id/Bathrooms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/darkBlue" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dbdbdb"
                        android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFF"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <Button
                    android:id="@+id/LoanCalculator"
                    android:layout_width="200dip"
                    android:layout_height="28dp"
                    android:background="@drawable/green_btn"
                    android:contentDescription="@null"
                    android:text="Loan Calculator"
                    android:textColor="#FFF" />
            </LinearLayout>

            <com.z.stproperty.fonts.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="AGENT INFORMATION"
                android:textColor="#FFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFF"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/AgentImage"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:contentDescription="@null"
                        android:src="@drawable/appicon" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/AgentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agency Name"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/Agency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Licence No"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/LicenceNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CEA Number"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/RegisterNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/agentEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#dbdbdb"
                        android:contentDescription="@null" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.z.stproperty.fonts.Helvetica
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="#000000" />

                    <com.z.stproperty.fonts.HelveticaBold
                        android:id="@+id/AgentMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#dbdbdb"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <Button
                        android:id="@+id/SendEmailBtn"
                        android:layout_width="150dip"
                        android:layout_height="28dp"
                        android:background="@drawable/green_btn"
                        android:text="Email"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/SendEnquiryBtn"
                        android:layout_width="150dip"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/green_btn"
                        android:text="Send Enquiry"
                        android:textColor="#FFF"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>